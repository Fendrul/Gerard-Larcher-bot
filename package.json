{
  "name": "discord-bot-template",
  "version": "1.0.0",
  "description": "A Discord bot boilerplate including TypeScript and ESLint.",
  "author": {
    "email": "fellipeutaka@gmail.com",
    "name": "Fellipe Utaka"
  },
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/fellipeutaka/discord-bot-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/fellipeutaka/discord-bot-template.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "npm run build && forever start ./dist/index.js",
    "stop": "forever stop ./dist/index.js",
    "restart": "npm run build && forever restart ./dist/index.js",
    "build": "tsc",
    "format": "prettier --write \"**/*.{json,ts}\"",
    "lint": "eslint . --ext ts --fix",
    "commands:register": "npm run build && node --enable-source-maps dist/register-command.js"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "discord.js": "^14.7.1",
    "dotenv": "^16.0.3",
    "forever": "^0.14.2",
    "jsmin": "^1.0.1",
    "pm2": "^5.3.0",
    "typescript-optional": "^3.0.0-alpha.3"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.8.4",
    "tsup": "^6.6.0",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  }
}
